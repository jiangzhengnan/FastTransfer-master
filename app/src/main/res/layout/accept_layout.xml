<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/accept_background">
    <android.support.v7.widget.Toolbar
        android:id="@+id/accept_toobar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:clipToPadding="true"
        android:fitsSystemWindows="true"
        android:paddingBottom="5dp">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:src="@drawable/send_left_arrow" />
    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
      >
        <com.guohui.fasttransfer.view.CircleDiffuse
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/device_0"
            android:layout_width="wrap_content"
            android:layout_marginTop="345dp"
            android:layout_marginLeft="137dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/touxiang"/>
            <TextView
                android:id="@+id/device_name_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:text="设备0"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/device_1"

            android:layout_width="wrap_content"
            android:layout_marginTop="145dp"
            android:layout_marginLeft="287dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/touxiang"/>
            <TextView
                android:id="@+id/device_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:text="设备1"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/device_2"

            android:layout_width="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="37dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/touxiang"/>
            <TextView
                android:id="@+id/device_name_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffff"
                android:text="设备2"
                />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>